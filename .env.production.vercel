
# Vercel Environment Variables
NODE_ENV=production
NEXTAUTH_URL=https://your-vercel-app-name.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-here

# Backend API (keep your Replit backend running)
NEXT_PUBLIC_BACKEND_URL=https://your-backend-replit-url.replit.app

# OAuth Providers (add these in Vercel dashboard)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Database (if you want to connect directly from Vercel)
MONGODB_URI=your-mongodb-connection-string

# API Keys (add these in Vercel dashboard as secrets)
SPORTS_API_KEY=your-sports-api-key
ODDS_API_KEY=your-odds-api-key
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# PiCoin Integration
PI_API_SANDBOX_KEY=your-pi-sandbox-key
PI_API_PRODUCTION_KEY=your-pi-production-key

# Security Keys
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key
PICOIN_ENCRYPTION_KEY=your-picoin-key
