
{
  "buildCommand": "cd apps/frontend && npm install && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "rootDirectory": "apps/frontend",
  "env": {
    "NODE_ENV": "production",
    "NEXTAUTH_URL": "https://your-vercel-app-name.vercel.app",
    "NEXT_PUBLIC_BACKEND_URL": "https://your-backend-replit-url.replit.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "apps/frontend/src/app/api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/backend/(.*)",
      "destination": "https://your-backend-replit-url.replit.app/api/$1"
    }
  ]
}
